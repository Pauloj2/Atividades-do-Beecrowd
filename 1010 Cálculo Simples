int main(){

     int codigo1, quant1;
     float valor1, valor2, soma;
     int codigo2, quant2;

     scanf("%d", &codigo1);
     scanf("%d", &quant1);
     scanf("%f", &valor1);
     scanf("%d", &codigo2);
     scanf("%d", &quant2);
     scanf("%f", &valor2);

     soma = (quant1 * valor1) + (quant2 * valor2);

     printf("VALOR A PAGAR: R$ %.2f\n", soma);


 return 0;
 }
