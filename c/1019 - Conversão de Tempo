#include <stdio.h>

int main () {

    int valor, horas, minutos, segundos;
    int resto = 0;

    scanf("%d", &valor);

    horas = valor / 3600;
    resto = valor % 3600;

    minutos = resto / 60;
    resto = resto % 60;

    segundos = resto;

    printf("%d:%d:%d\n", horas, minutos, segundos);

return 0;
}
