#include <stdio.h>

int main () {

    int quant, i, num;
    int seq = 0, resul = 0;

    while(quant < 3 || quant > 500){
        scanf("%d", &quant);
    }

    for(i=0; i<quant; i++){
        scanf("%d", &num);
        if(num != seq){
            seq = num;
            resul++;
        }
    }
    printf("%d\n", resul);

    return 0;
}
