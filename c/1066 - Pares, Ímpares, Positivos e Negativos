#include <stdio.h>

int main () {

    int i, num, par = 0, impar = 0;
    int posit = 0, negat = 0;

    for(i=0; i<5; i++){
        scanf("%d", &num);
        if(num%2 == 0){
            par++;
        }else{
            impar++;
        }
        if(num > 0){
            posit++;
        }else if(num < 0){
            negat++;
        }
    }
    printf("%d valor(es) par(es)\n", par);
    printf("%d valor(es) impar(es)\n", impar);
    printf("%d valor(es) positivo(s)\n", posit);
    printf("%d valor(es) negativo(s)\n", negat);

 return 0;
}
