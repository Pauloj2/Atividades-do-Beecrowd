#include <stdio.h>

int main() {

    int num, i, soma = 0, cont = 0;

    while(num != 0){
        scanf("%d", &num);
        soma = 0;
        cont = 0;
        if(num == 0){
            break;
        }
        for(i=num; cont<5; i++){
            if(i % 2 == 0){
                soma+= i;
                cont++;
            }
        }
        printf("%d\n", soma);
    }
    return 0;
}
