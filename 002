#include <stdio.h>
#include <stdlib.h>

int main()
{
  //Números inteiros : ... , -3, -2, -1, 0, 1, 2, 3,...999
   //Marcador de posicao: %d

   //Números floats : ... , -2.3, 5.500, 0.002,
   //Marcador de posicao: %f


   printf("O numero %d e um numero inteiro \n", 2);
   printf("==========================================\n");
   printf("O numero %1.2f e um numero floats \n", 0.9);
   printf("==========================================\n");

   //*Operadores Aritmeticos Basicos
   //SOMA +
   //SUBTRACAO -
   //MULTIPLICACAO *
   //DIVISAO /
    printf ("Soma de 2+6: %d  \n", 2 + 6 );
    printf ("Subtração de 2-6: %d  \n", 2 - 6 );
    printf ("Multiplicacao de 2*6: %d \n", 2 * 6 );
    printf ("Divisao de 6/2: %1.2f \n", 6/2 );


 return 0;
}


